{
  "manifest_version": 2,
  "name": "Focus Mode (Socials Blocker)",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"]
    }
  ],
  "icons": { "48": "icon48.png", "128": "icon128.png" },
  "browser_action": {
    "default_popup": "Popup.html",
    "default_title": "Focus Mode (Socials Blocker)"
  },
  "permissions": [
    "https://www.youtube.com/*",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*",
    "https://www.netflix.com/*"
  ]
}
